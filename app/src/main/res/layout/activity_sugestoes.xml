<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lauramarra.quintafeira.TempoEspera">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Envie aqui sua sugestÃ£o!"
        android:id="@+id/titleSug"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:id="@+id/spinner"
        android:layout_below="@+id/titleSug"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:entries="@array/restaurantes"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/titleSug"
        android:layout_alignEnd="@+id/titleSug" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/buttonSend"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

</RelativeLayout>
